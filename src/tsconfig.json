{
	"extends": ["@sapphire/ts-config", "@sapphire/ts-config/extra-strict", "@sapphire/ts-config/decorators"],
	"compilerOptions": {
		"outDir": "../dist",
		"rootDir": ".",
		"baseUrl": ".",
		"skipLibCheck": true,
		"composite": true,
		"paths": {
			"#config": ["lib/util/config.ts"],
			"#constants": ["lib/util/constants.ts"],
			"#lib/*": ["lib/*"],
			"#utils/*": ["lib/util/*"]
		}
	},
	"include": [".", "./**/*.json"],
	"exclude": ["./tsconfig.json"]
}
